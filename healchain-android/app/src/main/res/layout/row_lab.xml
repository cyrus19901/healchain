<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/lab_name"
        android:text="K, Trivandrum"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:gravity="bottom"
        android:textColor="@color/black"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/lab_doctor"
        android:text="Dr. Sunny Jo"
        android:textSize="14sp"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:layout_below="@+id/lab_name"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/lab_report"
        android:text="Dr. "
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:visibility="gone"
        android:layout_below="@+id/lab_doctor"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/lab_date"
        android:text="2017 August 4"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/lab_report"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content" />

</RelativeLayout>